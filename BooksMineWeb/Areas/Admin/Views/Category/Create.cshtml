@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
    

    <div class="mb-3 p-1 row">
        <label class="p-0">Name</label>
        <input asp-for="name" placeholder="Enter The Category Name" class="form-control border-2" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
        <div class="mb-3 p-1 row">
            <label class="p-0">Description</label>
            <input asp-for="description" placeholder="Enter The Category Description" class="form-control border-2" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}