@model List<Category>

<partial name="_Notifications" />
<div class="border p-3 mt-4">
   <div class="row pb-2">
        <div class="col-4">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-4">
        </div>
        <div class="col-4">
            <a asp-action="create" class="btn btn-info btn-md form-control">Create Category</a>
        </div>
   </div>


<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
          <tr>
            <td>@obj.Id</td>
            <td>@obj.name</td>
            <td>@obj.description</td>
            <td>
              <div class="w-75 btn-group" role="group">
                <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning">Edit</a>
                &nbsp;
                <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
              </div>
            </td>
           </tr>
        }
    </tbody>
</table>
</div>
