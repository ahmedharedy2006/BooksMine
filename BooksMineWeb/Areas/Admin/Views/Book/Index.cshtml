@model List<BooksViewModel>

<partial name="_Notifications" />
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <div class="col-4">
            <h2 class="text-primary">Books</h2>
        </div>
        <div class="col-4">
        </div>
        <div class="col-4">
            <a asp-action="create" class="btn btn-info btn-md form-control">Add Book</a>
        </div>
    </div>


    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>No In Stock</th>
                <th>Author</th>
                <th>Publisher</th>
                <th>Category</th>


                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1;}
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@obj.Title</td>
                    <td>@obj.Description</td>
                    <td>@obj.Price</td>
                    <td>@obj.NoInStock</td>
                    <td>@obj.AuthorName</td>
                    <td>@obj.PublisherName</td>
                    <td>@obj.CategoryName</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning">Edit</a>
                            &nbsp;
                            <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
