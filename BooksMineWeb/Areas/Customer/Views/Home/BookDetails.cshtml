@model BooksMine.Models.Models.ShoppingCart

<h2>Book Details</h2>

<div class="row">
    <div class="col-6">
        <img src="@Model.booksViewModel.imgUrl"  alt="...">
    </div>
    <div class="col-6">
        <h5 class="card-title">@Model.booksViewModel.Title</h5>
        <h4>@Model.booksViewModel.Price</h4>
        <h6>@Model.booksViewModel.AuthorName</h6>
        <h6>@Model.booksViewModel.PublisherName</h6>
        <h6>@Model.booksViewModel.CategoryName</h6>
        <h6>@Model.booksViewModel.NoInStock</h6>
        <form method="post">
            <input hidden asp-for="bookId" />
            <input value="0" asp-for="@Model.Count" class="form-control border-2 border-black" type="number" max="@Model.booksViewModel.NoInStock" min="0"/>
            <br />
            <button type="submit" class="btn btn-success">Add To Cart</button>

        </form>
    </div>
</div>
