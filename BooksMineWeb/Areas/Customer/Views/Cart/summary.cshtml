@model ShoppingCartViewModel 


<div class="row">
    <div class="col-7">
        <h2>Shipping Details</h2>
        <form method="post">
            <div class="form-group">
                <label>Name :</label>
                <input asp-for="OrderHeader.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Phone :</label>
                <input asp-for="OrderHeader.phoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label>City :</label>
                <input asp-for="OrderHeader.city" class="form-control" />
            </div>
            <div class="form-group">
                <label>State :</label>
                <input asp-for="OrderHeader.state" class="form-control" />
            </div>
            <div class="form-group">
                <label>Postal Code :</label>
                <input asp-for="OrderHeader.postalCode" class="form-control" />
            </div>
            <div class="form-group">
                <label>State :</label>
                <input asp-for="OrderHeader.streetAddress" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Procced To Checkout</button>>
        </form>

    </div>
    <div class="col-5">
        <div class="card">
            <div class="card-header">
                Order Summary
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                        <th>Title</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        </tr>
                    </thead>
                    <tr>
                       @foreach(var item in Model.ListCart)
                        {
                           <td>@item.book.title</td>
                           <td>@item.Count</td>
                           <td>@item.book.price.ToString("c")</td>
                        }
                    </tr>
                    <tr>
                        <td>Total</td>
                        <td>@Model.OrderHeader.orderTotal.ToString("c")</td>
                    </tr>
                </table>
            </div>
           

        </div>
    </div>
</div>